<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/card_outter_padding"
    android:layout_marginTop="@dimen/card_outter_padding"
    android:layout_marginEnd="@dimen/card_outter_padding">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_border"
        android:padding="@dimen/card_inner_padding">

        <Button
            android:id="@+id/task_profile_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/task_name_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.1"
            android:background="@drawable/task_badge"
            android:backgroundTint="@color/colorPrimary"
            android:text="T1"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="@dimen/task_badge_text_size"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/task_name_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="ANALISIS DE INVENTARIO"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#000000"
            android:textSize="@dimen/task_name_text_size"
            android:textAlignment="textStart"
            android:autoSizeMinTextSize="@dimen/task_name_text_size"
            android:autoSizeMaxTextSize="@dimen/task_name_text_size"
            app:layout_constraintStart_toEndOf="@id/task_profile_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/task_recent_update_tv"
            app:layout_constraintBottom_toTopOf="@id/task_flavor_tv"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintHeight_percent="0.6"
            android:paddingStart="10dp"
            android:paddingEnd="5dp" />

        <TextView
            android:id="@+id/task_flavor_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="3 ejecuciones recientes"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#000000"
            android:textSize="@dimen/task_flavor_text_size"
            android:textAlignment="textStart"
            android:autoSizeMinTextSize="@dimen/task_flavor_text_size"
            android:autoSizeMaxTextSize="@dimen/task_flavor_text_size"
            app:layout_constraintStart_toEndOf="@id/task_profile_btn"
            app:layout_constraintTop_toBottomOf="@id/task_flavor_tv"
            app:layout_constraintEnd_toStartOf="@+id/task_pending_findings_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintHeight_percent="0.4"
            android:paddingStart="10dp"
            android:paddingEnd="5dp" />

        <TextView
            android:id="@+id/task_recent_update_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="11:00"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#000000"
            android:textSize="@dimen/task_timestamp_text_size"
            android:textAlignment="center"
            android:autoSizeMinTextSize="@dimen/task_timestamp_text_size"
            android:autoSizeMaxTextSize="@dimen/task_timestamp_text_size"
            app:layout_constraintStart_toEndOf="@+id/task_name_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/task_pending_findings_tv"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHeight_percent="0.4"
            android:paddingStart="5dp"
            android:paddingEnd="10dp" />

        <TextView
            android:id="@+id/task_pending_findings_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="2"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#000000"
            android:textSize="@dimen/task_timestamp_text_size"
            android:textAlignment="center"
            android:textStyle="bold"
            android:autoSizeMinTextSize="@dimen/task_timestamp_text_size"
            android:autoSizeMaxTextSize="@dimen/task_timestamp_text_size"
            app:layout_constraintStart_toEndOf="@+id/task_flavor_tv"
            app:layout_constraintTop_toBottomOf="@+id/task_recent_update_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHeight_percent="0.6"
            android:paddingStart="5dp"
            android:paddingEnd="10dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>



